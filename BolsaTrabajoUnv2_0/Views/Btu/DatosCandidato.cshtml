
@{
    ViewBag.Title = "DatosCandidato";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}
    <link href="~/Content/imagenPerfil.css" rel="stylesheet" />
    <style>
        #tabInfoPersonal {
            pointer-events: none;
        }
    </style>

<div id="cargandoDatos" class="row py-5" style="display:none">
    <div class="col-md-5">

    </div>
    <div class="col-md-7">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-border text-warning" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="spinner-border text-primary" role="status">
