                            <div class="col-md-12 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Área de Conocimientos</span>
                                    </div>
                                    <select ng-model="ctrl.AreaConoc" id="AreaConoc" name="AreaConoc" ng-change="ctrl.GlobalInfoAcademica()" class="custom-select" ng-options="list.Id as list.Descripcion for list in ctrl.listAreaConocimiento" style="max-width:36.8%" required></select>
                                </div>
                                <span style="color:red" ng-show="myForm2.AreaConoc.$invalid" />
                                <span ng-show="myForm2.AreaConoc.$error.required">*Área requerida</span>
                            </div>
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Fecha Inicio</span>
                                    </div>
                                    <input ng-model="ctrl.FechaIniCarrera" id="FechaIniCarrera" name="FechaIniCarrera" type="date" lang="es-mx" ng-change="ctrl.GlobalInfoAcademica()" class="form-control" aria-label="FechaInicio" aria-describedby="basic-addon1" style="max-width:100%" required>
                                </div>
                                <span style="color:red" ng-show="myForm2.FechaIniCarrera.$invalid" />
                                <span ng-show="myForm2.FechaIniCarrera.$error.required">*Fecha Inicio requerida</span>
                            </div>
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Fecha Fin</span>
                                    </div>
                                    <input ng-model="ctrl.FechaFinCarrera" name="FechaFinCarrera" id="FechaFinCarrera" type="date" lang="es-mx" ng-change="ctrl.GlobalInfoAcademica()" class="form-control" aria-label="FechaFin" aria-describedby="basic-addon1" style="max-width:100%" required>
                                </div>
                                <span style="color:red" ng-show="myForm2.FechaFinCarrera.$invalid" />
                                <span ng-show="myForm2.FechaFinCarrera.$error.required">*Fecha Fin requerida</span>
                            </div>

                            <div class="col-md-2 py-2">
                                <input id="datosAcademicos" type="button" class="btn btn-success" value="Guardar Datos Academicos"
                                       ng-disabled="myForm2.GradoEst.$invalid || myForm2.NombEsc.$invalid
