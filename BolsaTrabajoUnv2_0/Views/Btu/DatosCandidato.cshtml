<div id="formularioDatos" class="container-fluid py-5" ng-init="ctrl.CargarDatosPrincipales ()" style="display:none">
    <div class="row">
        <div class="col-md-2">            
        </div>
        <div class="col-md-2">            
            <img id="imgCadidato" class="user">
            <label for="cargarFoto" class="fotoPerilCv">Seleccionar Foto para Cv</label>
            <input type="file" id="cargarFoto" multiple accept="image/*" />
