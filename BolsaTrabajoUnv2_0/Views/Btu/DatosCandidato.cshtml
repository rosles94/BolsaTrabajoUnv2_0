                        <i id="curtall1" class="fas fa-check"></i>
                        <i id="curtall2" style="display:none" class="fas fa-exclamation"></i>
                    </span>
                </li>
            </ul>
            <br />
            <input id="btnBackPanelCand" type="button" value="Regresar al Panel" class="btn btn-danger py-2" style="display:none" ng-click="ctrl.RegresarPanelCandidato()" />
        </div>
        <div class="col-md-10">
            <ul class="nav nav-tabs" id="tabInfoPersonal" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="infoPersonal-tab" data-toggle="tab" href="#infoPer" role="tab" aria-controls="infoPer" aria-selected="true">Información Personal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="estuAcad-tab" data-toggle="tab" href="#estAcad" role="tab" aria-controls="estudiosAcad" aria-selected="false">Estudios Académicos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="softIdio-tab" data-toggle="tab" href="#softIdio" role="tab" aria-controls="softIdio" aria-selected="false">Software / Idiomas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="expProf-tab" data-toggle="tab" href="#expProf" role="tab" aria-controls="expProf" aria-selected="false">Experiencia Profesional</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="curTall-tab" data-toggle="tab" href="#curTall" role="tab" aria-controls="curTall" aria-selected="false">Cursos / Talleres</a>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="infoPer" role="tabpanel" aria-labelledby="home-tab">
                    <form name="myForm">
                        <div class="row">
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Matricula</span>
                                    </div>
                                    <input ng-model="ctrl.Matricula" id="Matricula" name="Matricula" ng-change="ctrl.GlobalInfoPersonal()" type="text" class="form-control" placeholder="Matricula" aria-label="Matricula" aria-describedby="basic-addon1" style="max-width:100%" required>
                                </div>
                                <span style="color:red" ng-show="myForm.Matricula.$invalid" />
                                <span ng-show="myForm.Matricula.$error.required">*Matricula requerida</span>
                            </div>
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Nombre(s)</span>
                                    </div>
                                    <input ng-model="ctrl.NombreCandidato" id="NombreCandidato" name="NombreCandidato" ng-change="ctrl.GlobalInfoPersonal()" type="text" class="form-control" placeholder="Nombre(s)" aria-label="Nombre" aria-describedby="basic-addon1" style="max-width:100%" maxlength="100" required>
                                </div>
                                <span style="color:red" ng-show="myForm.NombreCandidato.$invalid" />
                                <span ng-show="myForm.NombreCandidato.$error.required">*Nombre requerido (Max. 100 caracteres)</span>
                            </div>
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Apellido Paterno</span>
                                    </div>
                                    <input ng-model="ctrl.ApePatCandidato" id="ApePatCandidato" name="ApePatCandidato" ng-change="ctrl.GlobalInfoPersonal()" type="text" class="form-control" placeholder="Apellido Paterno" aria-label="ApellidoPaterno" aria-describedby="basic-addon1" style="max-width:100%" maxlength="100" required>
                                </div>
                                <span style="color:red" ng-show="myForm.ApePatCandidato.$invalid" />
                                <span ng-show="myForm.ApePatCandidato.$error.required">*Apellido Paterno requerido (Max. 100 caracteres)</span>
                            </div>
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Apellido Materno</span>
                                    </div>
                                    <input ng-model="ctrl.ApeMatCandidato" id="ApeMatCandidato" name="ApeMatCandidato" ng-change="ctrl.GlobalInfoPersonal()" type="text" class="form-control" placeholder="Apellido Materno" aria-label="ApellidoMaterno" aria-describedby="basic-addon1" style="max-width:100%" maxlength="100" required>
                                </div>
                                <span style="color:red" ng-show="myForm.ApeMatCandidato.$invalid" />
                                <span ng-show="myForm.ApeMatCandidato.$error.required">*Apellido Materno requerido (Max. 100 caracteres)</span>
                            </div>
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Fecha de Nacimiento</span>
                                    </div>
                                    <input ng-model="ctrl.FecNac" id="FecNac" name="FecNac" ng-change="ctrl.GlobalInfoPersonal()" class="form-control" type="date" aria-label="FechaNacimiento" aria-describedby="basic-addon1" style="max-width:100%"  required>
                                </div>
                                <span style="color:red" ng-show="myForm.FecNac.$invalid" />
                                <span ng-show="myForm.FecNac.$error.required">*Fecha de Nacimiento requerida</span>
                            </div>
                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Estado</span>
                                    </div>
                                    <select name="Estado" id="Estado" ng-model="ctrl.Estado" ng-change="ctrl.GlobalInfoPersonal();ctrl.ComboMunicipios()" class="custom-select" ng-options="list.Id as list.Descripcion for list in ctrl.listEstados" ng-click="ctrl.ComboMunicipios()" style="max-width:100%" required></select>
                                </div>
                                <span style="color:red" ng-show="myForm.Estado.$invalid" />
                                <span ng-show="myForm.Estado.$error.required">*Estado requerido</span>
                            </div>
                            <div class="col-md-6 py-2">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Municipio</span>
                                    </div>
                                    <select name="Municipio" id="Municipio" ng-change="ctrl.GlobalInfoPersonal()" ng-model="ctrl.Municipio" class="custom-select" ng-options="list.Id as list.Descripcion for list in ctrl.listMunicipios" style="max-width:100%" required></select>
                                </div>
                                <span style="color:red" ng-show="myForm.Municipio.$invalid" />
                                <span ng-show="myForm.Municipio.$error.required">*Municipio requerido</span>
                            </div>
                            <div class="col-md-12 py-2">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Domicilio</span>
                                    </div>
                                    <input ng-model="ctrl.Domicilio" id="Domicilio" name="Domicilio" type="text" ng-change="ctrl.GlobalInfoPersonal()" class="form-control" placeholder="Domicilio" aria-label="Domicilio" aria-describedby="basic-addon1" style="max-width:100%" maxlength="200" required>
                                </div>
                                <span style="color:red" ng-show="myForm.Domicilio.$invalid" />
                                <span ng-show="myForm.Domicilio.$error.required">*Domicilio requerido (Max. 200 caracteres)</span>
                            </div>
                            <div class="col-md-6 py-2">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Teléfono Celular</span>
                                    </div>
                                    <input ng-model="ctrl.TelCel" id="TelCel" name="TelCel" type="text" ng-change="ctrl.GlobalInfoPersonal()" class="form-control" placeholder="Teléfono Celular" aria-label="TeléfonoCelular" aria-describedby="basic-addon1" style="max-width:100%" maxlength="20" required>
                                </div>
                                <span style="color:red" ng-show="myForm.TelCel.$invalid" />
                                <span ng-show="myForm.TelCel.$error.required">*Teléfono Celular requerido (Max. 20 caracteres)</span>
                            </div>
                            <div class="col-md-6 py-2">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Teléfono Adicional</span>
                                    </div>
                                    <input ng-model="ctrl.TelAd" id="TelAd" name="TelAd" type="text" ng-change="ctrl.GlobalInfoPersonal()" class="form-control" placeholder="Teléfono Adicional" aria-label="TeléfonoAdicional" aria-describedby="basic-addon1" style="max-width:100%" maxlength="20" required>
                                </div>
                                <span style="color:red" ng-show="myForm.TelAd.$invalid" />
                                <span ng-show="myForm.TelAd.$error.required">*Teléfono Adicional requerido (Max. 20 caracteres)</span>
                            </div>
                            <div class="col-md-12 py-2">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">E-mail</span>
                                    </div>
                                    <input ng-model="ctrl.Email" id="Email" name="Email" type="text" ng-change="ctrl.GlobalInfoPersonal()" class="form-control" placeholder="E-mail" aria-label="Email" aria-describedby="basic-addon1" style="max-width:44.5%" maxlength="200" required>
                                </div>
                                <span style="color:red" ng-show="myForm.Email.$invalid" />
                                <span ng-show="myForm.Email.$error.required">*E-mail requerido (Max. 200 caracteres)</span>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <label class="input-group-text" for="radioGender">Genero</label>
                                    <div class="custom-control custom-radio py-2">
                                        <input ng-model="ctrl.Hombre" type="radio" id="radioMale" name="radioGender" class="custom-control-input">
                                        <label class="custom-control-label" for="radioMale">Masculino</label>
                                    </div>
                                    <div class="custom-control custom-radio py-2">
                                        <input ng-model="ctrl.Mujer" type="radio" id="radioFemale" name="radioGender" class="custom-control-input">
                                        <label class="custom-control-label" for="radioFemale">Femenino</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 py-2">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Área de Interes</span>
                                    </div>
                                    <input ng-model="ctrl.AreaInt" id="AreaInt" name="AreaInt" type="text" ng-change="ctrl.GlobalInfoPersonal()" class="form-control" placeholder="Área de Interes" aria-label="ÁreaInteres" aria-describedby="basic-addon1" style="max-width:100%" maxlength="1000" required>
                                </div>
                                <span style="color:red" ng-show="myForm.AreaInt.$invalid" />
                                <span ng-show="myForm.AreaInt.$error.required">*Área de Interes requerida (Max. 1000 caracteres)</span>
                            </div>
                            <div class="col-md-12 py-2">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Objetivo Personal</span>
                                    </div>
                                    <textarea ng-model="ctrl.ObjPersonal" id="ObjPersonal" name="ObjPersonal" type="text" ng-change="ctrl.GlobalInfoPersonal()" class="form-control" aria-label="ObjetivoPersonal" aria-describedby="basic-addon1" style="max-width:100%; max-height:70%; min-height:70%" maxlength="2000" required></textarea>
                                </div>
                                <span style="color:red" ng-show="myForm.ObjPersonal.$invalid" />
                                <span ng-show="myForm.ObjPersonal.$error.required">*Objetivo Personal requerido (Max. 2000 caracteres)</span>
                            </div>
                            <div class="col-md-1">
                                <input id="btninformacionCandidato" type="button" class="btn btn-info" value="Continuar"
                                       ng-disabled="myForm.Matricula.$invalid || myForm.NombreCandidato.$invalid || myForm.ApePatCandidato.$invalid
                                       || myForm.ApeMatCandidato.$invalid || myForm.FecNac.$invalid || myForm.Estado.$invalid
                                       || myForm.Municipio.$invalid || myForm.Domicilio.$invalid || myForm.TelCel.$invalid|| myForm.TelAd.$invalid
                                       || myForm.Email.$invalid|| myForm.AreaInt.$invalid|| myForm.ObjPersonal.$invalid"
                                       ng-click="ctrl.GuardarInformacionCandidato()" />
                            </div>

                        </div>
                    </form>
                </div>

                <div class="tab-pane fade" id="estAcad" role="tabpanel" aria-labelledby="profile-tab">
                    <form name="myForm2">
                        <div class="row">

                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Institución</span>
                                    </div>
                                    <select class="custom-select" style="max-width:100%" ng-model="ctrl.instExt" ng-change="ctrl.GlobalInfoAcademica(); ctrl.TipoInstitucionEducativa()">
                                        <option value="001UN">UNACH</option>
                                        <option value="002EXT">OTRA</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Grado de Estudios</span>
                                    </div>
                                    <select name="GradoEst" id="GradoEst" ng-model="ctrl.GradoEst" ng-change="ctrl.GlobalInfoAcademica()" class="custom-select" ng-options="list.Id as list.Descripcion for list in ctrl.listGradoEstudios" style="max-width:100%" required></select>
                                </div>
                                <span style="color:red" ng-show="myForm2.GradoEst.$invalid" />
                                <span ng-show="myForm2.GradoEst.$error.required">*Grado de Estudios requerido</span>
                            </div>


                            <div id="estInt" class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Carrera</span>
                                    </div>
                                    <select ng-model="ctrl.Carrera" id="Carrera" name="Carrera" ng-change="ctrl.GlobalInfoAcademica()" class="custom-select" ng-options="list.Id as list.Descripcion for list in ctrl.listCarreras" style="max-width:100%" required></select>
                                </div>
                                <span style="color:red" ng-show="myForm2.Carrera.$invalid" />
                                <span ng-show="myForm2.Carrera.$error.required">*Carrera requerida</span>
                            </div>

                            <div id="estExt" class="col-md-6 py-3" style="display:none">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Carrera</span>
                                    </div>
                                    <input ng-model="ctrl.CarreraExt" id="CarreraExt" name="CarreraExt" type="text" ng-change="ctrl.GlobalInfoAcademica()" class="form-control" placeholder="" aria-label="NombreCarreraExt" aria-describedby="basic-addon1" style="max-width:100%" required />
                                </div>
                                <span style="color:red" ng-show="myForm2.CarreraExt.$invalid" />
                                <span ng-show="myForm2.CarreraExt.$error.required">*Carrera requerida</span>
                            </div>

                            <div class="col-md-6 py-3">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">Institución Educativa</span>
                                    </div>
                                    <input ng-model="ctrl.NombEsc" id="NombEsc" name="NombEsc" type="text" ng-change="ctrl.GlobalInfoAcademica()" class="form-control" placeholder="Ejmp. UNACH" aria-label="NombreInstituciónEducativa" aria-describedby="basic-addon1" style="max-width:100%" maxlength="200" required>
                                </div>
                                <span style="color:red" ng-show="myForm2.NombEsc.$invalid" />
                                <span ng-show="myForm2.NombEsc.$error.required">*Institución Educativa requerida</span>
